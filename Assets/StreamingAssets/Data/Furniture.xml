<?xml version="1.0" encoding="utf-8"?>
<Furnitures>
	<Furniture objectName="furn_SteelWall">
		<Type>Wall</Type>
		<MovementCost>0</MovementCost>
		<Width>1</Width>
		<Height>1</Height>
		<LinksToNeighbours>true</LinksToNeighbours>
		<EnclosesRooms>true</EnclosesRooms>
		<BuildingJob jobTime="1">
			<Inventory objectName="Steel Plate" amount="5" />
		</BuildingJob>

		<DeconstructJob>
			<Inventory objectName="Steel Plate" amount="3" />
		</DeconstructJob>
	</Furniture>

	<Furniture objectName="Door">
		<Type>Door</Type>
		<MovementCost>1</MovementCost>
		<Width>1</Width>
		<Height>1</Height>
		<LinksToNeighbours>true</LinksToNeighbours>
		<EnclosesRooms>true</EnclosesRooms>

		

		<Params>
			<Param name="openness" value="0" />
			<Param name="is_opening" value="0" />
		</Params>

		<BuildingJob jobTime="1">
			<Inventory objectName="Steel Plate" amount="2" />
		</BuildingJob>

		<DeconstructJob>
			<Inventory objectName="Steel Plate" amount="1" />
		</DeconstructJob>

		<OnUpdate FunctionName="OnUpdate_Door" />

		<IsEnterable FunctionName="IsEnterable_Door" />"

	</Furniture>

	<Furniture objectName="Stockpile">
		<Type>Stockpile</Type>
		<MovementCost>1</MovementCost>
		<Width>1</Width>
		<Height>1</Height>
		<LinksToNeighbours>true</LinksToNeighbours>
		<EnclosesRooms>false</EnclosesRooms>
	</Furniture>

	<Furniture objectName="Oxygen Generator">
		<Type>Oxygen Generator</Type>
		<MovementCost>2</MovementCost>
		<Width>2</Width>
		<Height>2</Height>
		<LinksToNeighbours>false</LinksToNeighbours>
		<EnclosesRooms>false</EnclosesRooms>

		<OnUpdate FunctionName="OnUpdate_GasGenerator" />
		
		<Params>
			<Param name="gas_name" value="O2" />
			<Param name="gas_limit" value="0.2" />
			<Param name="gas_per_second" value="0.01" />
		</Params>
	</Furniture>

	<Furniture objectName="Mining Drone Station">
		<Type>Mining Drone Station</Type>
		<MovementCost>2</MovementCost>
		<Width>3</Width>
		<Height>3</Height>
		<LinksToNeighbours>false</LinksToNeighbours>
		<EnclosesRooms>false</EnclosesRooms>
	</Furniture>
</Furnitures>







